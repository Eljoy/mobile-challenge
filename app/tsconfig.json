{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@common": ["src/common"],
      "@app": ["src/app", "src/app/*"],
      "@design-system/*": ["src/design-system/*"],
      "@models/*": ["src/models/*"],
      "@features/*": ["src/features/*"],
      "@screens": ["src/screens"],
    },
  },
  "include": ["./**/*"]
}
