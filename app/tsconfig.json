{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@design-system/*": ["src/design-system/*"],
      "@models/*": ["src/models/*"],
      "@features/*": ["src/features/*"],
      "@screens/*": ["src/screens/*"],
    },
  },
  "include": ["./**/*"]
}
